<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">

    <policies>
        <policy id="connect-src">
            <values>
                <value id="iods-staging-cdn" type="host">https://staging.yourdomain.com</value>
                <value id="iods-production-cdn" type="host">https://cdn.yourdomain.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <!--
                    Google
                -->
                <value id="google" type="host">fonts.gstatic.com</value>
                <value id="googleapis" type="host">googleapis.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="iods-staging-cdn" type="host">https://staging.yourdomain.com</value>
                <value id="iods-production-cdn" type="host">https://cdn.yourdomain.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="iods-staging-cdn" type="host">https://staging.yourdomain.com</value>
                <value id="iods-production-cdn" type="host">https://cdn.yourdomain.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <!--
                    S7 Add This
                -->
                <value id="s7-addthis" type="host">s7.addthis.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <!--
                    Google
                -->
                <value id="google" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>

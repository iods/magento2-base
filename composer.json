{
  "name": "iods/module-base",
  "description": "Base module container for extending and testing general functionality across Magento 2.",
  "type": "magento2-module",
  "version": "0.1.1",
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Rye Miller",
      "email": "rye@drkstr.dev",
      "homepage": "https://ryemiller.io"
    }
  ],
  "minimum-stability": "dev",
  "repositories": {
    "magento": {
      "type": "composer",
      "url": "https://repo.magento.com/"
    }
  },
  "require": {
    "php": "~8.1|~7.4|~7.3|~7.1|~7.0",
    "magento/framework": ">=103.0.3-p3",
    "magento/module-config": "101.2.*",
    "magento/module-backend": "102.0.*",
    "symfony/console": "*",
    "ext-dom": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "phpstan/extension-installer": "1.2.*",
    "phpstan/phpstan": "1.9.*",
    "phpstan/phpstan-phpunit": "1.3.*",
    "phpunit/phpunit": "*",
    "composer/composer": "*@dev"
  },
  "autoload": {
    "files": ["registration.php"],
    "psr-4": {
      "Iods\\Base\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Iods\\Base\\Test\\Unit\\": "test/Unit"
    }
  },
  "scripts": {
    "test": [
      "@phpstan",
      "@phpunit"
    ],
    "phpstan": "phpstan analyse",
    "phpunit": "phpunit --no-coverage"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "magento/composer-dependency-version-audit-plugin": true
    }
  }
}
